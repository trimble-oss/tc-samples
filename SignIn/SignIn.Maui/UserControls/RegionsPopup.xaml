<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SignIn.Maui.UserControls.RegionsPopup"
             xmlns:converters="clr-namespace:SignIn.Maui.Converters"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             CanBeDismissedByTappingOutsideOfPopup="True"
             xmlns:viewmodels="clr-namespace:SignIn.Maui.ViewModels"
             x:DataType="viewmodels:ProjectsListViewModel">

    <toolkit:Popup.Resources>
        <ResourceDictionary>
            <converters:DictionaryToListConverter x:Key="DictionaryToList" />
        </ResourceDictionary>
    </toolkit:Popup.Resources>

    <VerticalStackLayout HorizontalOptions="End" VerticalOptions="Start">
        <ListView x:Name="RegionMenuItems" WidthRequest="160" ItemSelected="RegionMenuItems_ItemSelected" ItemsSource="{Binding RegionInfos, Converter={StaticResource DictionaryToList}}"/>
    </VerticalStackLayout>
</toolkit:Popup>
